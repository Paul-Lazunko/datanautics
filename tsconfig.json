{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2022",
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@const": ["src/constants"],
      "@helpers": ["src/helpers"],
      "@options": ["src/options"]
    }
  },
  "include": ["src/**/*"]
}
